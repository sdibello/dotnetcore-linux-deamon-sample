{
  "coreSettings": {
    "version": "0.0.1",
    "iterations": 50,
    "sleepms": 2300,
  },
  "Logging": {
    "PathFormat": "/var/log/core-deamon-sample/core-deamon-.{Date}.log",
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "LogDirectory": "/var/log/",
          "fileSizeLimitBytes": 1024,
          "PathFormat": "/var/log/core-deamon-sample/core-deamon-.{Date}.log",
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{ThreadId}]-{Message:lj}{NewLine}{Exception}"

        }
      }
    ],
    "Enrich": [ "FileLogContext", "WithThreadId", "WithProperty" ]
  }
}
