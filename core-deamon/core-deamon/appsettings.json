{
  "coreSettings": {
    "version": "0.0.1",
    "iterations": 50,
    "sleepms": 2300,
  },
  "Logging": {
    "PathFormat": "/var/log/core-deamon-sample/core-deamon-log.{Date}.log",
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "fileSizeLimitBytes": 2048,
          "shared": true,
          "retainedFileCountLimit": 15,
          "pathFormat": "/var/log/core-deamon-sample/core-deamon-log.{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{MachineName}:{ThreadId}]-{Message:lj}{NewLine}{Exception}"

        }
      }
    ],
    "Enrich": [ "FileLogContext", "WithThreadId", "WithProperty", "WithMachineName" ]
  }
}
