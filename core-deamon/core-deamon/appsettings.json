{
  "coreSettings": {
    "version": "0.0.1",
    "iterations": 10000,
    "sleepms": 2300,
    "logfile": "/var/log/core-deamon-.txt"
  },
  "Logging": {
    "PathFormat": "Logs/Core.Service.Sample.{Date}.log",
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "logDirectory": ".\\Logs",
          "fileSizeLimitBytes": 1024,
          "pathFormat": "Logs/Core.Service.Sample.{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
